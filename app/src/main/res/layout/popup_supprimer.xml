<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="137dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:gravity="left"
            app:srcCompat="?android:attr/alertDialogIcon" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="302dp"
            android:layout_height="115dp"
            android:gravity="center_vertical|left"
            android:text="Attention. Cette action supprime définitivement le trombinoscope, pour vous et les autres membres, de la base de donnée. Par conséquent si vous acceptez vous ne pourrez plus retrouver les données lié." />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>