<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgTag"
            android:layout_width="93dp"
            android:layout_height="78dp"
            android:contentDescription="@string/Hint_Tag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/Formation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/Messagerie"
            app:layout_constraintStart_toEndOf="@+id/imgTag"
            app:layout_constraintTop_toTopOf="@+id/imgTag" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/Messagerie"
            app:layout_constraintStart_toEndOf="@+id/imgTag"
            app:layout_constraintTop_toBottomOf="@+id/Formation" />

        <TextView
            android:id="@+id/Tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Messagerie"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgTag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgTag" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>