<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dip"
    android:background="@drawable/customborder">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerEtu"
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <ImageView
            android:id="@+id/profilePictureEtu"
            android:layout_width="370dp"
            android:layout_height="129dp"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nomEtu"
            android:layout_width="149dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/profilePictureEtu"
            tools:layout_editor_absoluteX="111dp" />

        <TextView
            android:id="@+id/prenomEtu"
            android:layout_width="144dp"
            android:layout_height="29dp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/nomEtu"
            tools:layout_editor_absoluteX="111dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>