<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dip"
    android:background="@drawable/customborder">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerEtu"
        android:layout_width="209dp"
        android:layout_height="210dp">

        <ImageView
            android:id="@+id/profilePictureEtu"
            android:layout_width="177dp"
            android:layout_height="102dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="-28dp"
            tools:layout_editor_absoluteY="16dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nomEtu"
            android:layout_width="149dp"
            android:layout_height="30dp"
            android:layout_marginTop="28dp"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/profilePictureEtu"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/prenomEtu"
            android:layout_width="144dp"
            android:layout_height="29dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/nomEtu"
            tools:layout_editor_absoluteX="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>