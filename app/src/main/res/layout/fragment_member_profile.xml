<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Member_Profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/Title_Member_Profile"
            android:textColor="@color/bleu_cobalt"
            android:textSize="30sp"
            android:fontFamily="@font/allan"
            app:layout_constraintBottom_toTopOf="@+id/img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="210dp"
            android:layout_height="181dp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/Hint_LastName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img" />

        <TextView
            android:id="@+id/prenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/Hint_FirstName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nom" />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/Action_Delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/Hint_Email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prenom" />

        <Button
            android:id="@+id/edit_image"
            android:layout_width="48dp"
            android:layout_height="22dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/ic_edit"
            android:color="@color/black"
            app:layout_constraintStart_toEndOf="@+id/img"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/edit_nom"
            android:layout_width="37dp"
            android:layout_height="35dp"
            android:layout_marginStart="256dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/ic_edit"
            android:color="@color/black"
            app:layout_constraintStart_toEndOf="@+id/nom"
            app:layout_constraintTop_toBottomOf="@+id/img" />

        <Button
            android:id="@+id/edit_prenom"
            android:layout_width="44dp"
            android:layout_height="26dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_edit"
            android:color="@color/black"
            app:layout_constraintStart_toEndOf="@+id/prenom"
            app:layout_constraintTop_toBottomOf="@+id/edit_nom" />

        <Button
            android:id="@+id/edit_mail"
            android:layout_width="53dp"
            android:layout_height="29dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_edit"
            android:color="@color/black"
            app:layout_constraintStart_toEndOf="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/edit_prenom" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>