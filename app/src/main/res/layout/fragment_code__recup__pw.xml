<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="405dp">
            <LinearLayout
                android:id="@+id/uselessParent"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/background"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profil_user"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="21dp"
                    android:src="@drawable/jpg_woman" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/Instructions_Reset_Pw_2"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="275dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:baselineAligned="false">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/caseCode1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/border"
                            android:gravity="center"
                            android:inputType="textVisiblePassword"
                            android:maxLength="1"
                            android:autofillHints="" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/caseCode2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/border"
                            android:gravity="center"
                            android:inputType="textVisiblePassword|text"
                            android:maxLength="1"
                            android:autofillHints="" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/caseCode3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/border"
                            android:gravity="center"
                            android:inputType="textVisiblePassword"
                            android:maxLength="1"
                            android:autofillHints="" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/caseCode4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:autofillHints=""
                            android:background="@drawable/border"
                            android:gravity="center"
                            android:inputType="textVisiblePassword|text"
                            android:maxLength="1" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/caseCode5"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:autofillHints=""
                            android:background="@drawable/border"
                            android:gravity="center"
                            android:inputType="textVisiblePassword"
                            android:maxLength="1" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_validCode"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            android:text="@string/Action_Valider" />
    </LinearLayout>
</ScrollView>