<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dip"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/relativelayoutImg"
        android:layout_width="80dp"
        android:layout_height="80dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragment_main_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cercle_bg"
        />

    <TextView
            android:id="@+id/myImageViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fragment_main_item_image"
            android:layout_alignTop="@+id/fragment_main_item_image"
            android:layout_alignEnd="@+id/fragment_main_item_image"
            android:layout_alignBottom="@+id/fragment_main_item_image"
            android:layout_margin="1dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/hello"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/fragment_main_item"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:textSize="14sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/fragment_main_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>