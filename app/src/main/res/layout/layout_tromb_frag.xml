<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:id="@+id/linearlayoutImg">

    <RelativeLayout
        android:id="@+id/relativelayoutImg"
        android:layout_width="80dp"
        android:layout_height="80dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragment_main_item_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@drawable/cercle_bg"
            android:contentDescription="@string/Hint_Tag"/>

        <TextView
            android:id="@+id/myImageViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fragment_main_item_image"
            android:layout_alignTop="@+id/fragment_main_item_image"
            android:layout_alignEnd="@+id/fragment_main_item_image"
            android:layout_alignBottom="@+id/fragment_main_item_image"
            android:layout_margin="1dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="18sp"
            android:contentDescription="@string/Hint_Tag"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/nompopup"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="18sp" />

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/emailpopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/editStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"
            app:srcCompat="@android:drawable/btn_star_big_off"
            android:contentDescription="@string/Label_Illustration_2" />

        <ImageView
            android:id="@+id/adminStar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:contentDescription="@string/Label_Illustration_2"/>

        <ImageView
            android:id="@+id/option"
            android:layout_marginTop="53dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_indicator"
            android:contentDescription="@string/Label_Illustration_7"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>